@article{wilson_validation_1998,
	title = {Validation of the {ALARA} Acitvation Code},
	volume = {34},
	abstract = {{ALARA} [Analytic and Laplacian Adaptive Radioactivity Analysis] v1.0, a new activation code released in January 1998 and developed specifically for the analysis of radioactivity in fusion energy systems, has been validated by comparison to other commonly used activation codes, {FISPACT-97} and {DKR-Pulsar} 2.0 using the International Atomic Energy Agency [{IAEA]} Fusion Evaluated Nuclear Data Library [{FENDL]} Calculational Activation Benchmark.  The solutions to the benchmark problem for both steady-state and pulsed operation have been calculated with all three programs on the same {IBM} {RS/6000} workstation.  In addition to comparing the total activity in each of the 44 non-void zones and the isotopic contributions to the activity at a specific spatial point, the required computing time has been compared.  For the steady state problem, agreement between {ALARA} and {FISPACT-97} for the total activity was within 2.5\% in all zones at all cooling times, and within 0.5\% in most zones.  For both the steady state and pulsed problem, agreement between {ALARA} and {DKR-Pulsar} 2.0 was within 1\% in all zones and at cooling times where tritium inventories were not significant.  The agreement between {ALARA} and {FISPACT-97} for the individidual isotopic inventories in the stainless steel first wall backplate were within 1\% for all dominant isotopes at all cooling times, while the {DKR-Pulsar} 2.0 results showed some significant discrepancies.  The processing time for {ALARA} is 2/3 of that for {DKR-Pulsar} 2.0 and less than 1/5 of that for {FISPACT-97.}  The validation exercise proves that {ALARA} is an accurate and fast computational tool for the calculation of induced activity power systems.},
	journal = {Fusion Science and Technology},
	author = {Wilson, {P.P.H.} and Tisge-Tamirat, H.},
	year = {1998},
	keywords = {{ALARA}, Fusion Evaluated Nuclear Data Library ({FENDL)}, Fusion Power Systems, International Atomic Energy Agency ({IAEA)}},
	file = {Validation of the ALARA Activation Code 1998.pdf:/home/gidden/.zotero/zotero/c080cdlf.default/zotero/storage/R5Z9FGG7/Validation of the ALARA Activation Code 1998.pdf:application/pdf}
