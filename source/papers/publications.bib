	keywords = {Acceleration, {CAD}, {DAGMC}, Fusion, Geometry, Monte Carlo Methods, Neutronics, Software Development},
	pages = {1759--1765},
	file = {2009_10_Wilson-FED-ISFNT-DAGMC.pdf:/home/gidden/.zotero/zotero/c080cdlf.default/zotero/storage/FGCV4D3J/2009_10_Wilson-FED-ISFNT-DAGMC.pdf:application/pdf;Wilson et al. - 2010 - Acceleration Techniques for the Direct Use of CAD-.doc:/home/gidden/.zotero/zotero/c080cdlf.default/zotero/storage/2MUUUN4P/Wilson et al. - 2010 - Acceleration Techniques for the Direct Use of CAD-.doc:application/msword}
